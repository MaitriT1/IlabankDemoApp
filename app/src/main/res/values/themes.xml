<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IlabankDemoApp" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="editTextColor">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.IlabankDemoApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.IlabankDemoApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.IlabankDemoApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <declare-styleable name="ImageSlider">
        <attr name="iss_selected_dot" format="reference" />
        <attr name="iss_unselected_dot" format="reference" />
    </declare-styleable>
    <style name="ThemeOverlay.SearchView" parent="Theme.IlabankDemoApp">
        <!-- Text color -->
        <item name="android:editTextColor">@color/black</item>
        <item name="iconTint">@color/black</item>
        <!-- Hint text color -->
        <item name="android:textColorHint">@color/black</item>
    </style>
    <style name="CustomActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
    </style>
</resources>